// start dashboard_items
.dashboard_items
    .row
        // start performance_item
        .col-12
            .performance_item.card_chart
                .chart_content
                    // start chart_content_head
                    .chart_content_head
                        // start chart_content_head_text
                        .chart_content_head_text
                            span.sub-title Total Shipments
                            h3.chart_title Performance
                        // ** end chart_content_head_text

                        // start charts_updates_btn
                        .charts_updates_btn
                            button.active(onclick="chartUpdateA()") 
                                span.text.d-none.d-sm-block Accounts
                                span.icon.d-block.d-sm-none <i class="fas fa-user"></i>
                            button(onclick="chartUpdateP()") 
                                span.text.d-none.d-sm-block Purchases
                                span.icon.d-block.d-sm-none <i class="fas fa-gift"></i>
                            button(onclick="chartUpdateS()") 
                                span.text.d-none.d-sm-block Sessions
                                span.icon.d-block.d-sm-none <i class="fas fa-hand-pointer"></i>
                        // ** end charts_updates_btn

                    // ** end chart_content_head

                    // start chart_content_body
                    .chart_content_body
                        <canvas id="performance_chart"></canvas>
                    // ** end chart_content_body

        // ** end performance_item

